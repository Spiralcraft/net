<task:Reference
  xmlns:task="class:/spiralcraft/task/"
  xmlns:smtp="class:/spiralcraft/net/smtp/"
  xmlns:ju="class:/java/util/"
  >
  
  <targetURI>context:/SMTPConnector.local.xml
  </targetURI>
  
  <chain>
    <smtp:SendMail>
      <senderX>"test@example.com"
      </senderX>
      
      <recipientX>"test@example.com"
      </recipientX>
      
      <messageX>
        "This is a test: "
        +[@ju:Date].().toString()
      </messageX>
    
      <headerBindings>Date=[@ju:Date].()
      </headerBindings>

      <headerBindings>From="&lt;test@example.com&gt;"
      </headerBindings>

      <headerBindings>Subject="test subject"
      </headerBindings>
      
    </smtp:SendMail>
    
  </chain>
</task:Reference>